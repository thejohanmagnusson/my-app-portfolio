<?xml version="1.0" encoding="utf-8"?>

<resources>

    <color name="PrimaryColor">#9C27B0</color>
    <color name="SecondaryColor">#EF6C00</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/PrimaryColor</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppButtonAccent" parent="AppButton">
        <item name="android:background">@color/SecondaryColor</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>
